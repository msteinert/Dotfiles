#!zsh

HOME2=/export0/msteinert
GOPATH=/code/msteinert/go/$(lsb_release -is)-$(lsb_release -rs)
GOROOT=/code/msteinert/src/$(lsb_release -is)-$(lsb_release -rs)/git/go
PLATFORM=$HOME/.local/$(lsb_release -is)-$(lsb_release -rs)

export HOME2 GOPATH GOROOT XDG_CACHE_DIR

LD_LIBRARY_PATH=$PLATFORM/lib:$LD_LIBRARY_PATH
MANPATH=$PLATFORM/share/man:$MANPATH
PATH=$GOROOT/bin:$GOPATH/bin:$PLATFORM/bin:$PLATFORM/usr/bin:$PATH
PKG_CONFIG_PATH=$PLATFORM/lib/pkgconfig:$PKG_CONFIG_PATH
PYTHONPATH=$PLATFORM/usr/lib/python2.6/site-packages

export LD_LIBRARY_PATH MANPATH PATH PKG_CONFIG_PATH PYTHONPATH

alias cd2="cd $HOME2"
alias cdc="cd /code/msteinert"
