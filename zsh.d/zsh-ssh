SSH_DIR=$HOME/.ssh/$(lsb_release -is)-$(lsb_release -rs)
SSH_ENV=$SSH_DIR/environment

start_agent()
{
    mkdir -p $SSH_DIR
    chmod 700 $SSH_DIR
    /usr/bin/ssh-agent | sed 's/^echo/#echo/' > $SSH_ENV
    chmod 600 $SSH_ENV
    . $SSH_ENV > /dev/null
}

[ -f $SSH_ENV ] && . $SSH_ENV > /dev/null
